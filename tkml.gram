
tkml        = ws element ws
element     = identifier ws '{' ws item* ws '}'
item        = (property / element) ws
property    = identifier ws ':' ws value
value       = identifier / color / number
identifier  = ~'[a-zA-Z_][a-zA-Z0-9_]*'
color       = '#' ~'[a-zA-Z0-9]{6}'
number      = ~'[0-9]+'
ws          = ~'\\s*'

